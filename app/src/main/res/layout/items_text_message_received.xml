<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="4dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp">
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_text_received"
                android:minWidth="160dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Aryan Raj"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="4dp"></TextView>
                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="-40dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/relMessageAndSender"
                    android:layout_marginBottom="4dp"
                    android:textSize="12sp"
                    android:text="10:09 PM"></TextView>
                <RelativeLayout
                    android:id="@+id/relMessageAndSender"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/txtName"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=" gfdgdfg "
                    android:minWidth="150dp"
                    android:maxWidth="280dp"></TextView>


                <TextView
                    android:id="@+id/txtGroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JWs, Asnaol, 2000 batch"
                    android:layout_alignParentStart="true"
                    android:visibility="invisible"
                    android:layout_below="@id/txtMessage"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    android:lines="1"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="10sp"></TextView>
                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView></RelativeLayout>

</RelativeLayout>