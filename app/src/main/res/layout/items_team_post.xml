<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTeam"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_user3"></ImageView>

        <TextView
            android:id="@+id/txtProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mini Project based on Android Studio"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/imgTeam"
            android:layout_marginStart="8dp"></TextView>

        <TextView
            android:id="@+id/txtProjectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProjectTitle"
            android:layout_toRightOf="@id/imgTeam"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="This project will be based on the Android Studio with
java and we will be uploading it to the Play Store"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"></TextView>

        <TextView
            android:id="@+id/txtTeamSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Members"
            android:layout_below="@id/txtProjectDescription"
            android:layout_toRightOf="@id/imgTeam"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/txtProjectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:layout_toRightOf="@id/txtTeamSize"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorGreen"
            android:layout_below="@id/txtProjectDescription"
            android:layout_marginStart="16dp"></TextView>

        <TextView
            android:id="@+id/txtTeamRequirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/txtApplyNow"
            android:text="Required a Team Leader, Project Manager and a Android"
            android:layout_below="@id/txtTeamSize"
            android:layout_margin="6dp"></TextView>

        <TextView
            android:id="@+id/txtApplyNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Now"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txtTeamSize"
            android:layout_margin="5dp"></TextView>

    </RelativeLayout>

</RelativeLayout>