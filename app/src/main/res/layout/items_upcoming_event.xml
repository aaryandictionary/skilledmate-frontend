<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">
    <RelativeLayout
        android:id="@+id/relEvent"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularImgEvent"
            android:layout_width="60dp"
            android:src="@color/colorBlack"
            android:layout_height="60dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txtTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name"
            android:textStyle="bold"
            android:layout_toRightOf="@id/circularImgEvent"
            android:layout_marginStart="8dp"></TextView>

        <TextView
            android:id="@+id/txtEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTeamName"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/circularImgEvent"
            android:layout_marginStart="8dp"
            android:text="10 Nov'20 at 10:00 PM"
            android:textSize="12sp"></TextView>
        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@id/circularImgEvent"
            android:text="Event Title"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"></TextView>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>