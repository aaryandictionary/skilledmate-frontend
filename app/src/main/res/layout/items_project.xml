<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relUserTeam"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularProjectImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_img">

        </de.hdodenhof.circleimageview.CircleImageView>
        <ImageView
            android:id="@+id/imgProjectOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_circle_pink"></ImageView>

        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lines="1"
            android:text="SkilledMate"
            android:textStyle="bold"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:ellipsize="end"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:autoSizeTextType="uniform"></TextView>
    </RelativeLayout>

</RelativeLayout>